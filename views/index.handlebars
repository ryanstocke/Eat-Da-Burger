<div class="container">
  <div class="row">
    <div class="center col-sm-12 text-center" id="top-bar">
      <img src="assets/img/burger.png" id="burgerImg" alt="Eat-Da-Burger App">
      <h1>Eat-Da-Burger</h1>
      <p>Add your own burger, or devour one of the available ones! </p>
    </div>
    <div class="col-small-6 text-center" class="task">
      <div class="row">
        {{#each burgers}}
          {{#unless this.devoured}}
          <div class="col-sm-9 text-center">
            <pre>{{this.id}}. {{this.burger_name}}</pre>
          </div>
          <div class="col-sm-3 text-center">
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
              <input type="hidden" name="burger_id" type="text"
              value={{this.id}}>
              <br>
              <button type="submit" class="btn btn-default">DEVOUR!</button>
            </form>
          </div>
          {{/unless}}
          {{/each}}
      </div>
    </div>
    <div class="col-sm-6 text-center" class="task">
      {{#each burgers}}
        {{#if this.devoured}}
          <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
          {{/if}}
          {{/each}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center enter_section">
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
        <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
      </form>
      <p>What burger would you like to eat?</p>
    </div>
  </div>

</div>


